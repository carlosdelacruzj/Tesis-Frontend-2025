.detalle-paquetes {
  display: flex;
  flex-direction: column;
  gap: 24px;
  padding-bottom: 32px;
}

.toolbar-actions {
  display: inline-flex;
  gap: 12px;
  align-items: center;
}

.toolbar-actions .back-button mat-icon {
  margin-right: 6px;
}

.detail-box {
  padding: 12px 16px;
  border: 1px solid #e4e9f2;
  border-radius: 8px;
  background-color: #fff;
}

.detail-box .label {
  font-size: 0.8rem;
  text-transform: uppercase;
  color: #7a889f;
  letter-spacing: 0.03em;
}

.detail-box .value {
  margin: 4px 0 0;
  font-weight: 600;
  color: #13203a;
}

.detail-box .value--multiline {
  white-space: pre-wrap;
}

.paquete-form .form-label {
  font-weight: 600;
  color: #13203a;
}
